# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# Frontend stuff
[*.{sass,scss,latte,ts,tsx,js,es6}]
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space

[*.{neon}]
indent_size = 4
indent_style = space
